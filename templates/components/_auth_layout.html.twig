{#
    Auth layout wrapper component
    
    Parameters:
    - title: page title
    - form_content: the form content block
    - footer_links: array of footer links with 'text' and 'url' keys
    - show_logo: boolean to show/hide logo (default: true)
#}

{% set showLogo = show_logo|default(true) %}

<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
    <div class="sm:mx-auto sm:w-full sm:max-w-sm">
        {% if showLogo %}
            <div class="mx-auto h-12 w-12 flex items-center justify-center">
                <span class="text-4xl">üåç</span>
            </div>
        {% endif %}
        <h2 class="mt-10 text-center text-2xl/9 font-bold tracking-tight text-gray-900 dark:text-white">{{ title }}</h2>
    </div>

    <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
        {{ form_content|raw }}

        {% if footer_links is defined and footer_links is not empty %}
            <div class="mt-10 text-center text-sm/6 text-gray-500 dark:text-gray-400 space-y-2">
                {% for link in footer_links %}
                    <p>
                        {{ link.prefix|default('') }}
                        <a href="{{ link.url }}" class="font-semibold text-blue-600 hover:text-blue-500 dark:text-blue-400 dark:hover:text-blue-300">{{ link.text }}</a>
                    </p>
                {% endfor %}
            </div>
        {% endif %}
    </div>
</div>