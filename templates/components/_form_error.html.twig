{#
    Reusable form error display component
    
    Parameters:
    - message: error message text
    - type: error type (error, warning, success) - default: error
#}

{% set errorType = type|default('error') %}

{% if errorType == 'error' %}
    {% set errorClasses = 'p-4 bg-red-50 border border-red-200 rounded-md text-red-800 dark:bg-red-900/20 dark:border-red-800/30 dark:text-red-200' %}
    {% set iconClasses = 'h-5 w-5 text-red-400 dark:text-red-300' %}
{% elseif errorType == 'warning' %}
    {% set errorClasses = 'p-4 bg-yellow-50 border border-yellow-200 rounded-md text-yellow-800 dark:bg-yellow-900/20 dark:border-yellow-800/30 dark:text-yellow-200' %}
    {% set iconClasses = 'h-5 w-5 text-yellow-400 dark:text-yellow-300' %}
{% else %}
    {% set errorClasses = 'p-4 bg-green-50 border border-green-200 rounded-md text-green-800 dark:bg-green-900/20 dark:border-green-800/30 dark:text-green-200' %}
    {% set iconClasses = 'h-5 w-5 text-green-400 dark:text-green-300' %}
{% endif %}

<div class="{{ errorClasses }}">
    <div class="flex">
        <div class="flex-shrink-0">
            {% if errorType == 'error' %}
                <svg class="{{ iconClasses }}" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.28 7.22a.75.75 0 00-1.06 1.06L8.94 10l-1.72 1.72a.75.75 0 101.06 1.06L10 11.06l1.72 1.72a.75.75 0 101.06-1.06L11.06 10l1.72-1.72a.75.75 0 00-1.06-1.06L10 8.94 8.28 7.22z" clip-rule="evenodd" />
                </svg>
            {% elseif errorType == 'warning' %}
                <svg class="{{ iconClasses }}" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M8.485 2.495c.673-1.167 2.357-1.167 3.03 0l6.28 10.875c.673 1.167-.17 2.625-1.516 2.625H3.72c-1.347 0-2.189-1.458-1.515-2.625L8.485 2.495zM10 5a.75.75 0 01.75.75v3.5a.75.75 0 01-1.5 0v-3.5A.75.75 0 0110 5zm0 9a1 1 0 100-2 1 1 0 000 2z" clip-rule="evenodd" />
                </svg>
            {% else %}
                <svg class="{{ iconClasses }}" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.857-9.809a.75.75 0 00-1.214-.882l-3.236 4.53L8.063 10.5a.75.75 0 00-1.126 0.98l2.249 2.5a.75.75 0 001.17-.049l3.857-5.4z" clip-rule="evenodd" />
                </svg>
            {% endif %}
        </div>
        <div class="ml-3">
            <div class="text-sm">
                {{ message|raw }}
            </div>
        </div>
    </div>
</div>