{% set content %}
    {% for message in messages %}
        {% include 'chat/_message.html.twig' %}
    {% endfor %}

    <div data-ai-trigger="{{ userMessageId }}" 
         data-stream-url="{{ path('app_chat_stream', {'messageId': userMessageId}) }}"
         data-fallback-url="{{ path('app_chat_ai_response', {'messageId': userMessageId}) }}"
         style="display: none;"></div>
{% endset %}
{% include 'chat/_messages_container.html.twig' with {'content': content} %}